{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "moduleResolution": "Node",
      "outDir": "dist",
      "importsNotUsedAsValues": "remove",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }